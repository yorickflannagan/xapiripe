{
	"name": "xapiripe",
	"version": "1.0.0",
	"description": "Digital signatures for web applications solution",
	"scripts": {
		"sign-request": "node ./pki/pki.js --issue ./pki/usr/request.req",
		"start-hekura": "node ./test/hekura-test.js --pki=./pki --service=true --check",
		"start-app-server": "node ./test/app-server.js --host=userapp.crypthings.org",
		"start-local": "node ./test/app-server.js",
		"service-test": "CHCP 65001>nul & electron ./appservice/main.js",
		
		"hamahiri-test": "node --napi-modules ./test/hamahiri-test.js --pki=./pki --check",
		"aroari-test": "node ./test/aroari-test.js --pki=./pki --check",
		"wanhamou-test": "node ./test/wanhamou-test.js --check",
		"hekura-test": "node ./test/hekura-test.js --pki=./pki --service=false --check",
		"test": "CD test & node all-components.js --pki=../pki --service=false",
		
		"hamahiri-build": "cd hamahiri & SET PROJECT_DIR=%USERPROFILE%/development/xapiripe & node-gyp rebuild",
		"service-build": "node ./build/build.js --build=service --arch=x64 --distribution=./build/caixa.distribution",
		"api-build": "webpack --config ./build/webpack.config.js",
		"api-dev-build": "webpack --config ./build/webpack.config.js --env development & COPY build\\output\\xapiripe.js test",
		
		"hamahiri-docs": "node ./build/make-docs.js --components=hamahiri",
		"aroari-docs": "node ./build/make-docs.js --components=aroari",
		"wanhamou-docs": "node ./build/make-docs.js --components=wanhamou",
		"hekura-docs": "node ./build/make-docs.js --components=hekura",
		"options-docs": "node ./build/make-docs.js --components=options",
		"update-docs": "node ./build/make-docs.js --components=update",
		"api-docs": "node ./build/make-docs.js --webapi=api",
		"fittings-docs": "node ./build/make-docs.js --webapi=fittings",
		"xabo-docs": "node ./build/make-docs.js --webapi=xabo",
		"all-docs": "node ./build/make-docs.js --components=hamahiri,aroari,wanhamou,hekura,options,update --webapi=api,fittings,xabo"
	},
	"repository": {
		"type": "git",
		"url": "https://bitbucket.org/yakoana/xapiripe.git"
	},
	"author": "Marco Antonio Gutierrez<yorick.flannagan@gmail.com>",
	"license": "LGPL-3.0-or-later",
	"bugs": {
		"email": "yorick.flannagan@gmail.com"
	},
	"keywords": [
		"CAdES",
		"Cryptography",
		"PKI"
	],
	"gypfile": true,
	"devDependencies": {
		"electron": "^18.0.3",
		"electron-packager": "^15.4.0",
		"electron-winstaller": "^5.0.0",
		"webpack": "^5.72.1",
		"webpack-cli": "^4.9.2",
		"yargs": "^17.4.1"
	},
	"dependencies": {
		"alert": "^5.1.1",
		"asn1js": "^2.3.2",
		"assert": "^2.0.0",
		"browserify-zlib": "^0.2.0",
		"buffer": "^6.0.3",
		"node-addon-api": "^4.3.0",
		"process": "^0.11.10",
		"setimmediate": "^1.0.5",
		"stream-browserify": "^3.0.0",
		"timers-browserify": "^2.0.12",
		"util": "^0.12.4",
		"yauzl": "^2.10.0",
		"yazl": "^2.5.1"
	}
}
