{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"$id": "https://bitbucket.org/yakoana/xapiripe/src/master/specs/update/distribution-schema.json",
	"description": "Sinete de identificação da distribuição do produto",
	"type": "object",
	"properties": {
		"productId": {
			"type": "string",
			"description": "Identificação de produto"
		},
		"productName": {
			"type": "string",
			"description": "Nome do produto"
		},
		"productDescription": {
			"type": "string",
			"description": "Descrição do produto"
		},
		"exe": {
			"type": "string",
			"description": "Nome do arquivo do arquivo executável"
		},
		"company": {
			"type": "string",
			"description": "Nome do fabricante do produto",
			"default": "The Crypthing Initiative"
		},
		"distributorId": {
			"type": "string",
			"description": "Identificação do distribuidor do produto"
		},
		"updateURL": {
			"type": "string",
			"description": "URL de atualização do produto"
		}
	},
	"required": [ "productId", "productName", "productDescription", "exe", "company", "distributorId", "updateURL" ],
	"additionalProperties": false
}